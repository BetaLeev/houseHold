  justify-items: center;
  align-content: center;
}
  .share-btn {
    line-height: 203rpx;
    width: 200rpx;
    height: 200rpx;
    border-radius: 115rpx;
    color: #b94c47;
    box-sizing: 10px 10px 10px #eaeaea;
    animation: wave 1.5s ease-out infinite;
  }
  
  @keyframes wave {
    50%, 75% {
      width: 210rpx;
      height: 210rpx;
      border-radius: 115rpx;
    }
  
    80%, 100% {
      border-radius: 115rpx;
      opacity: 0.3;
    }
  }
