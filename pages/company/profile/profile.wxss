  .share-btn {
    margin-top: 33rpx;
    width: 200rpx;
    height: 200rpx;
    border-radius: 115rpx;
    line-height: 200rpx;
    color: #b94c47;
    box-sizing: 10px 10px 10px #eaeaea;
    animation: wave 2.5s ease-out infinite;
  }
  
  @keyframes wave {
    50%, 75% {
      width: 230rpx;
      height: 230rpx;
      border-radius: 115rpx;

    }
  
    80%, 100% {
      margin-top: 33rpx;
      border-radius: 115rpx;
      opacity: 0.3;
    }
  }