.container {
  box-sizing: border-box;
  /* background-color: #f4f4f4; */
  /* background: #bd6461b9; */
  
  font-family: PingFangSC-Light, helvetica, 'Heiti SC';

  background: linear-gradient( #ca3c42,#b94c47);

