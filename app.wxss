}
@keyframes rotate {
  0% {
  filter: hue-rotate(0deg);
  }
  100% {
  filter: hue-rotate(360deg);
  }
}

view, image, text, navigator {
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

view, text {
  font-family: PingFangSC-Light, helvetica, 'Heiti SC';
  font-size: 29rpx;
  color: #333;
}
